{
  "name": "verida",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "npm run prebuild && next build",
    "build:prod": "NODE_ENV=production npm run prebuild && next build",
    "prebuild": "echo 'Preparing build...' && npm run db:generate:safe",
    "db:generate:safe": "npx prisma generate || echo 'Prisma generate failed - will retry at runtime'",
    "db:setup:prod": "npx prisma generate && npx prisma db push && (npx prisma db execute --file prisma/migrations/add_performance_indexes.sql || echo 'Performance indexes skipped - continuing')",
    "start": "./start.sh",
    "start:prod": "NODE_ENV=production next start",
    "start:coolify": "./start.sh",
    "build:coolify": "npm run prebuild && NEXT_PHASE=phase-production-build next build",
    "postbuild": "echo 'Build completed successfully'",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset",
    "setup:uploads": "node scripts/setup-uploads.mjs",
    "setup:ethereal": "node scripts/setup-ethereal-email.mjs",
    "setup:resend": "node scripts/setup-resend.mjs",
    "test:email": "node scripts/test-email-service.mjs",
    "test:resend": "node scripts/test-resend-debug.mjs",
    "validate:resend": "node scripts/validate-resend-setup.mjs",
    "test:integration": "tsx scripts/integration-test.ts",
    "deploy": "bash scripts/deploy.sh",
    "deploy:test": "bash scripts/deploy.sh test",
    "deploy:build": "bash scripts/deploy.sh build",
    "deploy:migrate": "bash scripts/deploy.sh migrate",
    "health:check": "curl -f http://localhost:3000/api/health || exit 1",
    "docker:build": "docker build -f Dockerfile.production -t verida-app .",
    "docker:run": "docker run -p 3000:3000 --env-file .env.production verida-app"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@floating-ui/dom": "^1.7.4",
    "@headlessui/react": "^2.2.8",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.2",
    "@prisma/client": "^6.17.1",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
